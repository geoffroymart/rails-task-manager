<h1>Add a new task</h1>

<div class="container">
  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_area :details, class: "form-control" %>
    </div>
    <%= f.submit class: "btn btn-success" %>
  <% end %>
</div>
